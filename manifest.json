{
    "manifest_version": 2,
    "name": "Magic Clipboard",
    "version": "0.1",
    "author": "David Kunz",
    "default_locale": "en",
    "description": "Find card images on pages and add them to a list upon button click.",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "scripts": []
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.mozilla.org/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}